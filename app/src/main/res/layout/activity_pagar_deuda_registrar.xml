<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OperacionDetalleActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:id="@+id/lyDetalleOperacion">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TableRow>
                <TextView
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="Cuenta:"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                   />
                <TextView
                    android:id="@+id/txt_Cuenta"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_marginLeft="10sp"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="Periodo de Pago:"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    />
                <TextView
                    android:id="@+id/txtPeriodoPago"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_marginLeft="10sp"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="Ãšltimo dia de pago:"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    />
                <TextView
                    android:id="@+id/txtUltimoDiaPago"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_marginLeft="10sp"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="Monto:"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    />
                <TextView
                    android:id="@+id/txtMonto"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_marginLeft="10sp"
                    />

            </TableRow>

            <TableRow>
                <TextView
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:text="Cuenta que paga Deuda:"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    />
                <TextView
                    android:id="@+id/txtCuentaPagaDeuda"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:layout_marginLeft="10sp"
                    />

            </TableRow>
        </TableLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyDetalleOperacion"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorCard"
            android:text="Regresar"
            android:textColor="@color/colorButtonText"
            android:id="@+id/btnRegresar"/>

        <Button

            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorButton"
            android:text="Pagar Deuda"
            android:textColor="@color/colorButtonText"
            android:id="@+id/btnPagar"/>


    </LinearLayout>



</RelativeLayout>